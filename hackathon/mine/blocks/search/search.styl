.search
	font-size: 16px

.search__search-info
	display: inline-block
	//position: relative

.search__form
	display: inline-block
	width: 280px
	vertical-align: top
	margin: 0 0 0 -12px

.search__input
	font-size: 16px
	height: 30px
	border: 1px solid $borderColor
	border-left: none
	margin: 0
	padding: 0 0 0 12px

.search__input:focus
	border: 1px solid $borderColor
	border-left: none
	outline: none

.search__button
	font-size: 16px
	padding: 6px 15px
	margin: 0 0 0 -6px
	background: #fff
	border: 1px solid $borderColor
	border-top-right-radius: 4px
	border-bottom-right-radius: 4px
	cursor: pointer
