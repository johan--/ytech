.city-list
	position relative
	display: inline-block

.city-list__p, .city-list__ul
	font-size: 13px

.city-list__p
	border-radius: 2px
	border: 1px solid rgba(0,0,0,.4)
	padding: 5px 10px
	margin: 0
	display: inline-block
	cursor: pointer

.city-list__p img
	padding: 0 0 1px 5px

.city-list__ul
	list-style: none
	margin: 5px 0 0 0
	padding: 0 0 0 30px;
	border: 1px solid rgba(0,0,0,.4)
	box-shadow: 0px 10px 40px rgba(0, 0, 0, 0.41)
	display: none

.city-list__ul_active
	display block
	position absolute
	top 100%
	left 0
	min-width 200px
	background #fff


.city-list__ul li
	padding: 5px 10px 5px 5px

.city-list__ul_li_begin
	color: #999999
	margin: 0 0 0 -30px
	padding: 7px 10px !important

.city-list__ul_li_end
	border-top: 1px solid rgba(0,0,0,.4)
	margin: 5px 0 0 -30px
	padding: 7px 10px !important

.city-list__ul_li_active
	list-style-image: url(li-active.png)