.search
    position: relative
    font-size: 16px
    
.search-suggest
    position: absolute
    z-index: 100
    top: 100%
    margin: 1px 0 0
    left: 0
    width: 100%
    height: auto
    background: #ffca00
    list-style: none
    padding: 0
    box-shadow: 0 0 3px #333
    border-radius: 4px
    &-item
        border-bottom: 1px solid #fff
        &:last-child
            border: none
        a
            display: block
            padding: 5px 10px
            color: #000
            text-decoration: none
            font-size: 14px
            &:hover
                background: #b0cfe8

.search__search-info
    display: inline-block
    //position: relative

.search__form
    display: inline-block
    vertical-align: middle
    margin: 0 0 0 -12px

.search__input
    font-size: 16px
    height: 32px
    border: 1px solid $borderColor
    border-right: none
    border-left: none
    margin: 0
    padding: 0 0 0 20px
    width: 190px

.search__input:focus
    border: 1px solid $borderColor
    border-right: none
    border-left: none
    outline: none

.search__button
    font-size: 16px
    height: 32px
    padding: 0 15px
    background: #fff
    border: 1px solid $borderColor
    border-top-right-radius: 4px
    border-bottom-right-radius: 4px
    cursor: pointer
    outline: none !important
        

.search__input, .search__button
    box-sizing: border-box