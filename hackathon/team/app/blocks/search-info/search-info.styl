.search-info
    font-size: 16px
    position: relative
    display: inline-block
    vertical-align: middle

.search-info__wrapper-h1
    padding: 0 15px
    margin: 0
    border: 2px solid #ffca00
    border-right: none
    line-height: 28px

.search-info__h1
    padding: 0
    margin: 0
    font-size: 16px
    font-weight: 400

.search-info__arrow
    background: url(/static/images/header/arrow.png) no-repeat;
    width: 10px
    height: 32px

.search-info__arrow, .search-info__wrapper-h1
    display: inline-block
    vertical-align: middle