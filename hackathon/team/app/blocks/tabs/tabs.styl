$tabsBorderColor = #bfbfbf

.tabs
    margin 0
    padding 0
    list-style none
    font-size 0
.tabs__item
    display inline-block
    font-size 13px
    background-color #ffffff
    vertical-align top
    cursor pointer
    border-top 1px solid $tabsBorderColor
    border-bottom  1px solid $tabsBorderColor
.tabs__link
    display: block
    height: 28px
    line-height: 28px
    padding 0 15px
    color black
    text-decoration none
    &:hover
        text-decoration none
        color black
.tabs__item_left
    border 1px solid $tabsBorderColor
    border-bottom-left-radius 4px
    border-top-left-radius 4px
.tabs__item_right
    border 1px solid $tabsBorderColor
    border-bottom-right-radius 4px
    border-top-right-radius 4px
.tabs__item_active
    background-color $activeColor
    cursor default


