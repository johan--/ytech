.search
	display table
	width 100%
	vertical-align middle

.search__left
.search__right
	display table-cell

.search__left
	position relative
	width 100%

.search__button
	margin 0
	padding 0
	border $border
	border-left none
	outline none

	width 67px
	height 38px

	vertical-align middle
	background #fff
	border-radius  0 3px 3px 0

	font-size 15px

.search__input
	margin 0
	padding 0 13px
	border $border
	outline none

	box-sizing border-box

	width 100%
	height 38px

	vertical-align middle
	line-height 15px

	color #999
	font-size 15px

.search__input_has-value
	padding-right 46px

.search__cancel
	display none

.search__cancel_active
	display block
	position absolute
	top 0
	right 0

	width 46px
	height 100%

	opacity .4
	background url('/images/search/close.svg') 50% 50% no-repeat
