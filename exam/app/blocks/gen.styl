html
    margin 0
    padding 0
    height 100%

body
    position relative
    margin 0
    height auto
    min-height 100%
    font-family $standartFont

.link
    text-decoration none

    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
    -webkit-tap-highlight-color transparent

.image
    font-size 0
    line-height 0

.image_rotate_45
    transform rotate(45deg)

.image_rotate_90
    transform rotate(90deg)
    
.image_rotate_135
    transform rotate(135deg)
    
.image_rotate_180
    transform rotate(180deg)
    
.image_rotate_225
    transform rotate(225deg)
    
.image_rotate_270
    transform rotate(270deg)

.image_rotate_315
    transform rotate(315deg)

.image_opacity_60
    opacity .6


clearfix()
    zoom: 1 if ie

    &:before,
    &:after
        content: "";
        display: table;

    &:after
        clear: both;
