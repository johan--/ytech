.tabs
	display table
	width 100%

	table-layout fixed
	border-collapse collapse

.tabs__item
	position relative
	display table-cell

	text-align center

	z-index 1

	&:before
		content ""
		position absolute
		top 0
		right 0
		bottom 0
		left -1px

		border $border

		background #fff

.tabs__link-text
	display block
	position relative

	padding 0 5px

.tabs__item_active
	z-index 2

	&:before
		border-color #ccbd80

		background #ffebae

.tabs__item_left
	border-left none

	&:before
		left 0
		border-radius 3px 0 0 3px

.tabs__item_right:before
	border-radius 0 3px 3px 0

.tabs__link
	display block

	height 30px

	line-height 30px

	color #191919
	font-size 14px